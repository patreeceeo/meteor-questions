/* TODO: Use giant photos for table bg! */

rounded-corners(radius)
  -moz-border-radius: radius
  -webkit-border-radius: radius
  border-radius: radius /* future proofing */
  -khtml-border-radius: radius /* for old Konqueror browsers */

.QuestionTable
  background: #333

.QuestionCard
  corner-radius = .2rem
  rounded-corners(corner-radius)
  display: block
  background: Ivory
  padding: .75rem
  position: relative
  .QuestionCard-answerButton
    color: white
    display: none
    position: absolute
    right: .5em
    bottom: .5em
    z-index: 1
  .QuestionCard-answerInput
    width: 100%
    max-width: 100%
  .QuestionCard-answerContainer
    padding: 0.5rem
    background: wheat
  .QuestionCard-answer
    margin-bottom: 1.75rem

.QuestionCard:hover
  .QuestionCard-answerButton
    display: block


.u-gridColumnWidth
  /* See ListQuestionsView::columnWidth */

.u-gridColumnMargin
  margin: .75rem

.u-narrow
  max-width: 33rem !important

.u-pageMargin
  margin: 1rem

.u-navSpacingLeft
  margin-left: 1rem

/* This depends on BODY and HTML having a height of 100% */
.u-fillViewport
  display: block
  position: relative
  width: 100%
  height: 100%

.NavBar
  height = 2.5rem
  min-height: height
  width: 100%
  line-height: height
  z-index: 1
  background: white
  font-weight: bold

  .NavBar-item
    height: height
    vertical-align: middle
    display: inline-block

.ProfilePicture
  vertical-align: middle
  // For some reason it's off by a pixel otherwise
  position: relative
  top: -1px

.ProfilePicture--small
  @extend .ProfilePicture
  size = 2.25rem
  rounded-corners(size/2)
  width: size
  height: size

.ProfilePicture--medium
  @extend .ProfilePicture
  size = 4.5rem
  rounded-corners(2.25rem/2)
  width: size
  height: size

.Link
  &:hover
    text-decoration: underline
    color: darkslateblue

.u-showForMediumUp
  display: none !important

@media only screen and (min-width: 480px)
  .u-showForMediumUp
    display: initial !important

.u-fixedFix
  .u-posFixed
  .u-posFixedTop
    position: absolute !important
