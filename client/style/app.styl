/* TODO: Use giant photos for table bg! */

rounded-corners(radius)
  -moz-border-radius: radius
  -webkit-border-radius: radius
  border-radius: radius /* future proofing */
  -khtml-border-radius: radius /* for old Konqueror browsers */

.QuestionTable
  background: #333

.QuestionCard
  rounded-corners(5px)
  display: block
  background: Ivory
  padding: .75rem
  position: relative
  .QuestionCard-answerButton
    color: white
    display: none
    position: absolute
    right: .5em
    bottom: .5em
    z-index: 1
  .QuestionCard-answerInput
    width: 100%
    max-width: 100%

.QuestionCard:hover
  .QuestionCard-answerButton
    display: block


.u-gridColumnWidth
  /* See ListQuestionsView::columnWidth */

.u-gridColumnMargin
  margin: .75rem

.u-narrow
  max-width: 33rem !important

.u-pageMargin
  margin: 1rem

.u-navSpacingLeft
  margin-left: 0.5rem

/* This depends on BODY and HTML having a height of 100% */
.u-fillViewport
  display: block
  position: relative
  width: 100%
  height: 100%

.NavBar
  height = 2rem
  min-height: height
  width: 100%
  line-height: height
  z-index: 1
  background: white

  .NavBar-item
    height: height
    vertical-align: middle
    display: inline-block

  .NavBar-item-profilePicture
    size = height
    rounded-corners(size/2)
    vertical-align: middle
    vertical-align: middle
    width: size

.Link
  &:hover
    text-decoration: underline
    color: darkslateblue

